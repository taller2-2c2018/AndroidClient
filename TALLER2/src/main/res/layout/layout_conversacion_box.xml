<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/card_view_margin_top"
    android:layout_marginRight="@dimen/card_view_margin_right"
    android:layout_marginBottom="@dimen/card_view_margin_botton"
    android:layout_marginLeft="@dimen/card_view_margin_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/linearl_margin_top"
        android:layout_marginBottom="@dimen/linearl_margin_botton"
        android:layout_marginRight="@dimen/linearl_margin_right"
        android:layout_marginLeft="@dimen/linearl_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtConversacionUserName"
                android:text="Emanuel"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/txtConversacionCantMsjs"
                android:text="(1)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtConversacionUltimoContenido"
            android:text="Emanuel te ha enviado una nueva solicitud de amistad."
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>