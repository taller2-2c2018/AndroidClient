<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardBackgroundColor="@color/blanco"
    android:layout_marginTop="@dimen/card_view_margin_top"
    android:layout_marginRight="@dimen/card_view_margin_right"
    android:layout_marginBottom="@dimen/card_view_margin_botton"
    android:layout_marginLeft="@dimen/card_view_margin_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_marginTop="@dimen/linearl_margin_top"
        android:layout_marginBottom="@dimen/linearl_margin_botton"
        android:layout_marginRight="@dimen/linearl_margin_right"
        android:layout_marginLeft="@dimen/linearl_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgNotificacion"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/river4" />
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:gravity="left"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Emanuel"
                android:id="@+id/nomNotificacion"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Emanuel te ha enviado una nueva solicitud de amistad."
                android:id="@+id/descNotificacion"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>