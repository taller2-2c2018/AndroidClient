<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/card_view_margin_top"
    android:layout_marginRight="@dimen/card_view_margin_right"
    android:layout_marginBottom="@dimen/card_view_margin_botton"
    android:layout_marginLeft="@dimen/card_view_margin_left"
    android:visibility="visible"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_marginTop="@dimen/linearl_margin_top"
        android:layout_marginBottom="@dimen/linearl_margin_botton"
        android:layout_marginRight="@dimen/linearl_margin_right"
        android:layout_marginLeft="@dimen/linearl_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_imagencontactonuevo"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/river4" />
        <LinearLayout
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="FERNANDO NITZ"
                android:id="@+id/id_nomcontactonuevo"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_aceptar_amigo"
                    android:layout_weight="1"
                    android:text="ACEPTAR"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/verde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_rechazar_amigo"
                    android:layout_weight="1"
                    android:text="RECHAZAR"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/rojo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>